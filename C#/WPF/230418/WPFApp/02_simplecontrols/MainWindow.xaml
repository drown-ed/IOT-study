<Window x:Class="_02_simplecontrols.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_simplecontrols"
        mc:Ignorable="d"
        Title="MainWindow" Height="415" Width="235">
    <StackPanel>
        <TextBlock Text="텍스트 블록" Width="100"/>
        <Label Content="라벨 영역" Width="100" />
        <TextBox Text="텍스트박스" Width="100"/>
        <PasswordBox Password="패스워드 박스" Width="100" />
        <Slider x:Name="SldStep" Value="0" Width="100" ValueChanged="SldStep_ValueChanged" />
        <ProgressBar x:Name="PgbStep" Value="0" Width="100" Height="15" Maximum="10" />

        <MediaElement x:Name="MediaPlayer" Source="" Width="200" Height="100" LoadedBehavior="Manual"/>
        <Image Source="xaml.png" Height="32" />
    </StackPanel>
</Window>
